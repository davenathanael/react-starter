{
  "name": "easy-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^6.6.0",
    "react-query": "^2.12.1",
    "react-scripts": "3.4.3",
    "styled-components": "^5.1.1",
    "typescript": "~3.7.2",
    "zustand": "^3.0.2"
  },
  "scripts": {
    "build:css": "postcss src/assets/tailwind.css -o src/assets/styles.css",
    "watch:css": "yarn run build:css -- -w",
    "start": "yarn run watch:css & react-scripts start",
    "build": "NODE_ENV=production yarn run build:css && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "checkTs": "tsc --noEmit",
    "eslint": "eslint --ext js,ts,jsx,tsx",
    "lint": "yarn run eslint -- src",
    "lint:fix": "yarn run eslint -- --fix src",
    "prettify": "prettier --write --ignore-unknown src",
    "prettify:check": "prettier --check src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "babel-plugin-macros": "^2.8.0",
    "eslint-config-prettier": "^6.11.0",
    "postcss-cli": "^7.1.1",
    "prettier": "2.1.1",
    "tailwindcss": "^1.7.5",
    "twin.macro": "^1.7.0"
  },
  "babelMacros": {
    "twin": {
      "config": "tailwind.config.js",
      "preset": "styled-components",
      "autoCssProp": true,
      "debugProp": true,
      "debugPlugins": false,
      "debug": false
    }
  }
}
